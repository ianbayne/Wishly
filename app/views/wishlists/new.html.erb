<div class="bg-gray-200 h-screen flex items-center justify-center flex-col">
  <div class="w-5/6 mx-auto py-3">
    <div class="flex items-center mb-5">
      <h1 class="text-2xl font-extrabold">Create a new wishlist</h1>
    </div>

    <%= form_with model: @wishlist do |f| %>
      <div class="field mb-4 w-64">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-input" %>
      </div>

      <div id='wishlist_items'>
        <%= f.fields_for :wishlist_items do |wishlist_item| %>
          <%= render 'wishlist_item_fields', f: wishlist_item %>
        <% end %>
        <div class="links">
          <%= link_to_add_association '+', f, :wishlist_items %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Create", class: "form-submit" %>
      </div>
    <% end %>

