<div class="bg-gray-200 h-screen">
  <div class="w-5/6 mx-auto py-3">
    <div class="flex items-center mb-5">
      <h1 class="text-2xl font-extrabold"><%= @wishlist.title %></h1><%= link_to("Edit", edit_wishlist_path(@wishlist), class: "text-sm ml-3 -mb-1") if can? :edit, @wishlist %>
    </div>

    <% if @wishlist_items.load.any? %>
      <ul class="font-mono mb-5 pl-5">
        <%= render partial: "wishlist_items/wishlist_item", collection: @wishlist_items, cached: true %>
      </ul>
    <% end %>

    <%= render 'shared/footer' %>
  </div>
</div>
